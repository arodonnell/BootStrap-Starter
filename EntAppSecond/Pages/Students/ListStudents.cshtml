@page
@model EntAppSecond.Pages.Students.ListStudentsModel
@{
    ViewData["Title"] = "ListStudents";
}

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var student in Model.Students)
    {
        //list out each of the properties
        <tr>
            <td>@student.StudentID</td>
            <td>@student.FirstName</td>
            <td>@student.LastName</td>
            
            <td> <a asp-page="StudentDetails" asp-route="@student.StudentID">Details</a> </td>
        </tr>
    }
    </tbody>
</table>

